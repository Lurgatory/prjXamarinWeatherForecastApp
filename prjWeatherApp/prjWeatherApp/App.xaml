<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prjWeatherApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#7B55CB</Color>
            <Color x:Key="Secondary">#7216BA</Color>
            <Color x:Key="SearchBarBackgroundColor">#E0D3FB</Color>
            <Style x:Key="PrimaryLabelWhite" TargetType="Label">
                <Setter Property="TextColor" Value="White"/>
            </Style>
            <Style x:Key="SecondaryLabelPurple" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource Secondary}"/>
                <Setter Property="FontSize" Value="Small"/>
            </Style>
            <Style x:Key="ThreeHourForecastLabel" TargetType="Label">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="Large"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>