<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prjWeatherApp.Footer.FooterButtonComponent">
    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Tapped="OnTapped"/>
    </ContentView.GestureRecognizers>
    <ContentView.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Image x:Name="imgIcon" HeightRequest="30" WidthRequest="30"/>
            <Label x:Name="lblIcon" HorizontalOptions="Center" Style="{StaticResource SecondaryLabelPurple}"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>