<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prjWeatherApp.WeatherView.WeatherSubDetailsComponent">
    <ContentView.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Image x:Name="imgWeatherSubDetailIcon" HeightRequest="40"/>
            <Label x:Name="lblWeatherSubDetailValue" HorizontalOptions="Center" Style="{StaticResource SecondaryLabelPurple}"/>
            <Label x:Name="lblWeatherSubDetailTitle" HorizontalOptions="Center"  Style="{StaticResource SecondaryLabelPurple}"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>